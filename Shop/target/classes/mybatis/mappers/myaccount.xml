<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.myaccount">

<resultMap id="productResult" type="productVO">
		<result property="product_id" column="product_id" />  
		<result property="product_name" column="product_name" />
		<result property="product_detail" column="product_detail" />
		<result property="sales_unit" column="sales_unit" />
		<result property="product_size" column="product_size" />
		<result property="packing_type" column="packing_type" />
		<result property="product_image" column="product_image" />
		<result property="supplier" column="supplier" />
		<result property="product_detail_image" column="product-detail_image"/>
		
		<result property="product_category_num" column="product_category_num" />
		<result property="product_category_name" column="product_category_name" />
		
		<result property="option_name" column="option_name" />
		<result property="option_price" column="option_price" />
		<result property="option_quantity" column="option_quantity" />
		
		<result property="item_num" column="item_num" />
		<result property="price" column="price" />
		<result property="stock" column="stock" />
		<result property="sales" column="sales" />
		<result property="discount" column="discount" />
		<result property="reg_date" column="reg_date" />
		<result property="unit_price" column="unit_price" />
		
		
	</resultMap>	


<select id = "selectMyDetailInfo" resultType = "memberVO" parameterType="String">
	<resultMap id="memberResult" type="memberVO"> <!-- 회원 정보를 저장할 resultMap을 정의한다. -->
		<result property="member_id" column="member_id" />  <!-- db의 있는 이름 : 값 -->
		<result property="password" column="password" />
		<result property="member_name" column="member_name" />
		<result property="email" column="email" />
		<result property="phone" column="phone" />
		<result property="load_address" column="load_address" />
		<result property="rest_address" column="rest_address" />
		<result property="zipNo" column="zipNo" />
		<result property="member_date" column="member_date" />
		<result property="birthday" column="birthday" />
		<result property="pre_score" column="pre_score" />
		<result property="this_score" column="this_score" />
		<result property="point" column="point" />
		<result property="member_status" column="member_status" />
		<result property="grade" column="grade" />
	</resultMap>
	
	<select id="selectMyDetailInfo" resultType="memberVO"
		parameterType="String">
	 <![CDATA[
			select * from member
			where member_id=#{member_id}
    	]]>
	</select>

<select id = "listFavList" resultMap = "productResult" parameterType="String">
	 <![CDATA[
			select * from product p , item i, mylist m where p.product_id=i.product_id and p.product_id=m.product_id and m.member_id=#{member_id}

    	]]>
</select>

	<!-- 회원수정 -->
	<update id="modifyMemberInfo" parameterType="java.util.HashMap">
	   update member 
			   <set>
			   password = #{password},
			   member_name=#{member_name},
			   email=#{email},
			   phone=#{phone}
			   </set>
		where 
		member_id=#{member_id}
	</update>	
	
	<!-- 배송지 수정 -->
	<update id="modifyAddressInfo" parameterType="java.util.HashMap">
	   UPDATE MEMBER 
			   <set>
			   zipNo=#{zipNo},
			   load_address=#{load_address},
			   jibun_address=#{jibun_address},
			   rest_address=#{rest_address}		   
			   </set>
		WHERE 
		member_id = #{member_id}
	</update>	 
	
</mapper>